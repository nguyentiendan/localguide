<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="generator" content="localguide.com">
	<meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1">
	<meta name="description" content="">
	<title>Signup - Create user</title>
	{% include "../common/header_not_login.jinja2" %}
</head>

<body>
    <div class="form-container">
		<div class="text-center mb-4" style="padding-top:100px;">
			<h1 class="h1 mb-3 font-weight-bold">LocalGuide</h1>
			<p class="text-center display-5">Signup to become a user</p>
		</div>	
		<form id="signupForm" @submit.prevent="processForm">	
			<div>
				<b-modal ref="myModalRef" hide-footer hide-header no-close-on-esc no-close-on-backdrop title="Signup">
					<div class="d-block text-center">
						<h5>Thanks you for signup. Please check email!</h5>
					</div>
					<b-btn class="mt-3" variant="outline-danger" block @click="hideModal">Close Me</b-btn>
				</b-modal>
        	</div>
			<div class="form-group">
				<label>Full name</label>
                <input type="text" name="fullname" v-validate="'required|min:6'" v-model="user.fullname" class="form-control" id="inputFullname" placeholder="Full name"  autofocus="" autocapitalize="off" autocorrect="off">
				<span v-show="errors.has('fullname')" class="is-error">{% raw %}{{ errors.first('fullname') }}{% endraw %}</span>
			</div>
			
			<div class="form-group">
				<label>Email address</label>
                <input type="email" name="email" v-validate="'required|email'" v-model="user.email" class="form-control" id="inputEmail" placeholder="Email address" autocapitalize="off" autocorrect="off">
				<span v-show="errors.has('email')" class="is-error">{% raw %}{{ errors.first('email') }}{% endraw %}</span>
			</div>
			
			<div class="form-group">
				<label>Password</label>
                <input type="password" name="password" v-validate="'required|min:8'" v-model="user.password" class="form-control" id="inputPassword" placeholder="Password" autocapitalize="off" autocorrect="off">
				<span v-show="errors.has('password')" class="is-error">{% raw %}{{ errors.first('password') }}{% endraw %}</span>
			</div>
			 
			<div class="form-group ">
				<!--<button type="submit" id="button" :disabled="errors.any()" class="btn btn-success btn-lg btn-block ">SIGN UP</button>-->
				<input type="submit" id="button" :disabled="errors.any()" class="btn btn-success btn-lg btn-block " value="SIGN UP"> 
			</div>
			<p class="text-center small text-dark">By signing up, you agree to our <a href="#">Terms of Service</a></p>
			<hr>
			<p class="text-center">Already have an account ? <a href="/login">Login</a></p>
		</form>

		<div class="text-center display-5 font-weight-normal">
			HOME | ABOUT US | FAQ's | CONTACT
		</div>
	</div>
	
</section>
{% include "../common/footer_not_login.jinja2" %}

<script>
	// Notify vue about the VeeValidate plugin
 	Vue.use(VeeValidate);
	Vue.use(bootstrapVue);	

	const signupForm = new Vue({
        el: '#signupForm',
        data: {
			success: false,
			user: {
				fullname:'',
				email: '',
            	password: ''
			},
        },
		created() {
			//alert('Call when load');
		},
        methods: {
			processForm() {
        		//attempt validating all
                this.$validator.validateAll().then((result) => {
                    if (result) {
						//validation passed succesfully
						axios({
							method: 'POST',
							url: URL + 'user/create',
							data: this.user,
							config: { headers: {'Content-Type': 'application/json; charset=utf-8' }}
						})
						.then( (response) => {
							//handle success
							if (response.status == '200' && response.statusText == 'OK') {
								signupForm.showModal()
							}
						})
						.catch( (response) => {
							//handle error
						});
                    }
                });
            },
			showModal () {
				this.$refs.myModalRef.show()
			},
			hideModal () {
				this.$refs.myModalRef.hide();
				window.location = URL
			},
        }	
    }); 
</script>

</body>
</html>
