{% extends "layout_admin.jinja2" %}

{% block content %}
<h4 class="mbr-fonts-style mbr-bold display-2">
	User Listing
	- <small>listing all user</small>
</h4>
<section class="form2 cid-rccOyUZvnc" id="userList">
	<div class="col-md-12">
		{% if not user : %}
			<h5>Sorry, we have not user in this time.</h5>
		{% else %}
		<table class="table table-striped">
			<thead class="thead-light">
				<tr>
					<th scope="col">#</th>
					<th scope="col">Fullname</th>
					<th scope="col">Email</th>
					<th scope="col">Mobile</th>
					<th scope="col">Sex/Age</th>
					<th scope="col">Country/City</th>
					<th scope="col">Status</th>
					<th scope="col">Role</th>
					<th scope="col">Last login</th>
				</tr>
			</thead>
			<tbody>
				{% for u in user %}
					{% if u.uid == request.user.uid %}
					<tr style="background-color:#FDB5A5">
					{%else%}
					<tr>
					{%endif%}
						<th scope="row">{{u.id}}</th>
						<td><a href="#">{{u.fullname|e}}</a></td>
						<td>{{u.email}}</td>
						<td>{{u.mobile}}</td>
						<td>
							{% if u.sex == '1'%}Male{%else%}Female{%endif%}/{{u.age}}
						</td>
						<td>{{u.country}}/{{u.city}}</td>
						<td>
							{% if u.status == '1'%}Active{%else%}Deactive{%endif%}
						</td>
						<td>
							{% if u.role == '2'%}Admin{%elif u.role == '1'%}Guide{%elif u.role == '0'%}User{%endif%}
						</td>
						<td>{{u.last_login}}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		{% endif %}
	</div>
</section>

{% endblock content %}