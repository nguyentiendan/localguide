			<div class="row row-sm-offset">
				<div class="col-md-12 multi-horizontal">
					<div class="form-group">
						<h4 class="mbr-fonts-style pb-2 mbr-bold form-title display-4">Working history</h4>
						<div :disabled="isEditing" :class="{view: isEditing}">
							{% if user.work_history == 'None' :%}
								<i>Please update your experience</i>
							{% else %}
								<p class="mbr-fonts-style display-4">{{user.work_history|safe}}</p>
							{% endif %}
						</div>
						<div :disabled="!isEditing" :class="{view: !isEditing}">
							<quill-editor v-model="user.work_history" ref="workEditor" :options="editorOption"></quill-editor>
						</div>
					</div>
				</div>
			</div>
			<span class="input-group-btn">
				<button @click="isEditing = !isEditing" v-if="!isEditing" class="btn btn-form btn-light display-4">Edit<br></button>
				<button v-else-if="isEditing" @click="save" class="btn btn-form btn-primary display-4">Save</button>
				<button v-if="isEditing" @click="isEditing = false" class="btn btn-form btn-secondary display-4">Cancel</button>
			</span>
		</form>
	</div>
</section>

{% endblock content %}