<section class="cid-rccOyRMpwz" style="padding-top:0px;padding-bottom:0px;" id="relatedTour">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-12">
				<h5 class="mbr-fonts-style pb-1 pt-3 mbr-bold display-4">RELATED TOURS</h5>
			</div>
		</div>
		<div class="row row-content justify-content-center" v-if="count > 1">
			<div class="card p-3 col-12 col-md-6" v-for="tour in tours">
				<div class="card-wrapper">
					<div class="card-img">
						<div class="price-box">
							<h5 class="price mbr-fonts-style mbr-bold display-4">${tour.price}$</h5>
						</div>
						<!--<img src="{{request.static_url('localguide:static/assets/images/01.jpg')}}" title="">-->
						<img class="rounded" :src="'{{request.static_url('localguide:static/assets/user_images/guide/')}}'+tour.uid+'/'+tour.banner" @click="tourDetail(tour.id, tour.uid)" alt="tour banner" style="cursor: pointer;">
					</div>
					<div class="card-box">
						<h4 class="card-title mbr-fonts-style pb-1 mbr-bold display-5">${tour.title}</h4>
						<p class="mbr-text mbr-fonts-style mbr-normal display-4">
							${tour.type}</p>
						<div class="ico-line-wrap">
							<div class="ico-line">
								<div class="px-1 pb-3 mbr-iconfont mbr-iconfont-social mbri-star" style="color: rgb(30, 198, 182); fill: rgb(30, 198, 182);" media-simple="true"></div>
								<div class="px-1 pb-3 mbr-iconfont mbr-iconfont-social mbri-star" style="color: rgb(30, 198, 182); fill: rgb(30, 198, 182);" media-simple="true"></div>
								<div class="px-1 pb-3 mbr-iconfont mbr-iconfont-social mbri-star" style="color: rgb(30, 198, 182); fill: rgb(30, 198, 182);" media-simple="true"></div>
								<div class="px-1 pb-3 mbr-iconfont mbr-iconfont-social mbri-star" style="color: rgb(158, 158, 158); fill: rgb(158, 158, 158);" media-simple="true"></div>
								<div class="px-1 pb-3 pr-2 mbr-iconfont mbr-iconfont-social mbri-star" style="color: rgb(158, 158, 158); fill: rgb(158, 158, 158);" media-simple="true"></div>
								<h3 class="rev mbr-fonts-style mbr-bold display-4">4 reviews</h3>
							</div>
							<div class="ico-line">
								<div class="px-1 pb-3 pr-2 mbr-iconfont mbr-iconfont-social mbri-clock" style="color: rgb(0, 0, 0); fill: rgb(0, 0, 0);" media-simple="true"></div>
								<h3 class="rev mbr-fonts-style mbr-bold display-4">${tour.days} days</h3>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-12 form2" style="padding-top:15px; padding-bottom:15px; align-items:right;">
			<span class="input-group-btn">
				<button class="btn btn-form btn-primary display-3">All Tour</button>
			</span>
		</div>
	</div>
</section>
